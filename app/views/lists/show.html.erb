<div class="container">
  <span>
    <h1 class="genre"><%= @list.name %></h1>
  </span>
  <%# <div style="image: image_url("totoro.png")"></div> %>
  <% @list.bookmarks.each do |bookmark| %>
    <h2><%= bookmark.movie.title %></h2>
    <li><%= bookmark.comment %></li>
    <div class="button">
      <%= link_to "Delete", bookmark_path(bookmark),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
    </div>
  <% end%>
  <% if @list.photo.attached?  %>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <%= @bookmark %>
  <%= link_to "Back", lists_path %>
  <%= link_to "Add bookmark",  new_list_bookmark_path(@list)%>
  <%= link_to "Delete the list", lists_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
</div>
